@using MovieDB.Utility 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieDB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/786e687912.js" crossorigin="anonymous"></script>
</head>
<body class="fullbody">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3 customnav">
            <div class="container">
                <span class="logo">MovieDB</span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse float-left collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" asp-action="ActionMovies" asp-controller="Home" asp-area="Users">Action</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="AdventureMovies" asp-controller="Home" asp-area="Users">Adventure</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="HorrorMovies" asp-controller="Home" asp-area="Users">Horror</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="DramaMovies" asp-controller="Home" asp-area="Users">Drama</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="RomanceMovies" asp-controller="Home" asp-area="Users">Romance</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-action="ComedyMovies" asp-controller="Home" asp-area="Users">Comedy</a>
                        </li>

                        @if (User.IsInRole(SD.Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Add Movies</a>
                            </li>
                         }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 container">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2020 - MovieDB - <span id="date"></span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
